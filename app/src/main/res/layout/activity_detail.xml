<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ndroid="http://schemas.android.com/tools"
    android:background="@color/white">

    <!-- ScrollView for the content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Course Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="339dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/detailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="220dp"
                    android:text="Course Title"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detailTitle"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="Course Subtitle"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </RelativeLayout>

            <!-- Progress Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/detailCompletionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finished X of Y Lessons"
                    android:textSize="14sp" />

                <ProgressBar
                    android:id="@+id/detailProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:max="100"
                    android:progress="50"
                    style="?android:attr/progressBarStyleHorizontal" />
            </LinearLayout>

            <!-- Duration and Lessons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/detailDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rounded_bg_orange"
                    android:padding="8dp"
                    android:text="9h 32min"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/detailLessons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bg_blue"
                    android:padding="8dp"
                    android:text="24 Lessons"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Lessons List (dynamically populated) -->
            <LinearLayout
                android:id="@+id/lessonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">
                <!-- Dynamic lessons will be added here -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Start Button and other UI elements at the bottom -->

    <TextView
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="16dp"
        android:text="Lesson Title Here"
        android:textStyle="bold"
        android:gravity="center"
        android:textAllCaps="false"
        android:textColor="#000"
        android:layout_marginHorizontal="15dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_button"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#141414"
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:layout_marginHorizontal="15dp"
        app:cornerRadius="8dp" />
</FrameLayout>
