<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginActivity">

    <!-- Background LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <!-- Centered content LinearLayout -->
        <LinearLayout
            android:layout_width="369dp"
            android:layout_height="590dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_background"
        android:gravity="center"
        android:orientation="vertical"
            android:paddingHorizontal="35dp">


        <!-- Logo at the top -->
            <!-- Uncomment and use your ImageView for logo -->

            <!-- Slogan Text -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="165dp"
                android:layout_height="142dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/hamra"
                android:contentDescription="App Logo"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                />


            <TextView
                android:id="@+id/slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Start your 30 day free trial. Cancel any time."
                android:textAlignment="center"
                android:textColor="#666"
                android:textSize="14sp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/google_login_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFFFFF"
                android:text="Login with Google"
                android:textColor="#000"
                app:cornerRadius="8dp"
                android:icon="@drawable/google"
                />





            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="16dp"
                android:background="#B1B1B1" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/username_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#CCCCCC"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true">

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_gravity="center" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#CCCCCC"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#333"
                    android:textSize="16sp"
                    android:padding="16dp"
                    android:layout_gravity="center" />
            </com.google.android.material.textfield.TextInputLayout>


            <!-- Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#141414"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#fff"
                app:cornerRadius="8dp" />

            <!-- Login with Google Button -->

            <!-- Forgot Password Link -->
            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="#4CAF50"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
